        function Save() {
            var role = new Object();
            role.Name = $("#roleNameText").val();
            $.ajax({
                "url": "/Event/Create",
                "type": "POST",
                "datatype": "json",
                "data": role
            }).then((result) => {
                debugger;
                if (result.data != null) {
                    Swal.fire({
                        text: 'Success!',
                        title: 'Your file has been Create.',
                        icon: 'success'
                    }).then((hasil) => {
                        $("#tableRole").DataTable().ajax.reload();
                    });
                    $("#myModal").modal("hide");
                }
                else {
                    Swal.fire(
                        'Failed!',
                        'Your file has not deleted.',
                        'Failed'
                    )
                }
            })
        }
        function ClearScreen() {
            document.getElementById("roleIdText").disabled = true;
            $("#roleIdText").val('');
            $("#roleNameText").val('');
            $("#Update").hide();
            $("#Save").show();
        }
        function GetById(Id) {
            $.ajax({
                "url": "/Event/Details/",
                "type": "GET",
                "datatype": "json",
                "data": { Id: Id }
            }).then((result) => {
                debugger;
                if (result.data != null) {
                    document.getElementById("roleIdText").disabled = true;
                    $("#roleIdText").val(result.data.Id);
                    $("#roleNameText").val(result.data.Name);

                    $("#myModal").modal('show');
                    $("#Update").show();
                    $("#Save").hide();
                }
            })
        }
        function Validation() {
            debugger;
            if ($("#roleNameText").val() == "" || $("#roleNameText").val() == " ") {
                Swal.fire('Please Fill Name');
            }
            else if ($("#roleIdText").val() == "" || $("#roleIdText").val() == " ") {
                Save();
            }
            else {
                Edit($("#roleIdText").val());
